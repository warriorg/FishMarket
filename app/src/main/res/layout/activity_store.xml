<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/store_area_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="东沽鱼塘"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/store_fish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="带鱼"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@id/store_area_name"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/store_partition"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_btn_blue_purple"
        android:layout_height="1dp"
        android:layout_below="@+id/store_area_name" />


    <ListView
        android:id="@+id/store_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/store_area_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
